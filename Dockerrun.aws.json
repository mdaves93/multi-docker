{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mpdaves/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "mpdaves/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "mpdaves/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "mpdaves/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client", 
                "server"
            ]
        }
    ]
}
